{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    
        "version": "2.0.0",
      
        "tasks": [
          {
            "label": "new react folder",
      
            "command": "mkdir ${cwd}/src/components/${input:dirName}",
      
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
              "echo": false,
              "reveal": "silent",
              "focus": false,
              "panel": "shared",
              "showReuseMessage": false,
              "clear": true
            },
            
         },
         {
            "label": "new index.tsx",
      
            "command": "New-Item -Path '${cwd}/src/components/${input:dirName}/index.tsx' -ItemType File",
      
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
              "echo": false,
              "reveal": "silent",
              "focus": false,
              "panel": "shared",
              "showReuseMessage": false,
              "clear": true
            },
         },
         {
            "label": "new styles.ts",
      
            "command": "New-Item -Path '${cwd}/src/components/${input:dirName}/styles.ts' -ItemType File",
      
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
              "echo": false,
              "reveal": "silent",
              "focus": false,
              "panel": "shared",
              "showReuseMessage": false,
              "clear": true
            },
         },
         {
            "label": "cmdR-All",
            "dependsOrder": "sequence",
            "dependsOn": [
                "new react folder",
                "new index.tsx",
                "new styles.ts"
            ],
            "problemMatcher": []
        }
      ],  
      
      // ........................................................................................
        
        "inputs": [
      
          {
            "type": "promptString",
            "id": "dirName",
            "description": "Complete my folder name",
            "default": "tsx folder to create"
          }
        ]
}
